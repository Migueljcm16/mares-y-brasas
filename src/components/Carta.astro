---
import degradado from '../assets/fondo-degradado.webp';
import carta_marina from '../assets/cartas/carta-marina.png';
import carta_polleria from '../assets/cartas/carta-polleria.png';
import carta_bar from '../assets/cartas/carta-bar.png';
---

<section id="carta">
    <img id="carta-degradado" src={degradado.src} alt="">
    <div id="carta-plato">
        <img src={carta_marina.src} alt="Carta marina">
        <a href="#">VER CARTA COMPLETA</a>
    </div>
    <div id="carta-plato">
        <img src={carta_polleria.src} alt="Carta polleria">
        <a href="#">VER CARTA COMPLETA</a>
    </div>
    <div id="carta-plato">
        <img src={carta_bar.src} alt="Carta bar">
        <a href="#">VER CARTA COMPLETA</a>
    </div>
</section>

<style>
    #carta {
        display: flex;
        justify-content: center;
        position: relative;
        background-color: #111212;
        padding: 65px 120px 65px 120px;
        gap: 50px;
    }

    #carta-degradado {
        width: 100%;
        height: 100%;
        opacity: 0.6;
        position: absolute;
        top: 0;
        left: 0;
        object-fit: cover;
    }

    #carta-plato {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 400px;
        gap: 25px;
        z-index: 1;

        & img {
            width: 100%;
            filter: brightness(1.2);
        }

        & a {
            padding: 12px 20px;
            border: 3px solid #CD310C;
            background: #CD310C;
            color: #fff;
            font-size: 14px;
            font-weight: 500;
            font-family: "Roboto", sans-serif;
            text-decoration: none;
            letter-spacing: 1px;
            cursor: pointer;
            transition-duration: 0.2s;

            &:hover {
                background: #96260a;
                border: 3px solid #96260a;
            }
        }
    }

    @media (max-width: 600px) {
        #carta {
            flex-direction: column;
            padding: 65px 30px 65px 30px;
            gap: 65px;
        }

        #carta-plato {
            max-width: none;
        }
    }
</style>