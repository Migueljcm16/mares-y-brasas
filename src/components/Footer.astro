---
import logoMyB from '../assets/logoMyB.svg';
import facebook from '../assets/footer/facebook.png';
import instagram from '../assets/footer/instagram.png';
import tiktok from '../assets/footer/tik-tok.png';
---

<footer>
    <div id="footer-info">
        <img src={logoMyB.src} alt="logo mares y brasas">
        <div>
            <span id="footer-info-titulo">HORARIOS DE ATENCION</span>
            <span id="footer-info-texto">CEVICHERIA: 12pm - 6pm</span>
            <span id="footer-info-texto">POLLERIA: Domingo a Jueves de 12pm - 10 pm Viernes y Sábados de 12pm - 11 pm</span>
            <span id="footer-info-texto">RESTOBAR: 12pm - 11pm</span>
        </div>
        <div>
            <span id="footer-info-titulo">SIGUENOS</span>
            <div id="footer-info-redes">
                <a href="https://www.facebook.com/maresybrasasrestobar" target="_blank"><img src={facebook.src} alt="facebook"></a>
                <a href="https://www.instagram.com/maresybrasas_restobar/" target="_blank"><img src={instagram.src} alt="instagram"></a>
                <a href="https://www.tiktok.com/@maresybrasas.restobar" target="_blank"><img src={tiktok.src} alt="tiktok"></a>
            </div>
        </div>
    </div>
    <div id="copyright">
        <span>@2025 <strong>Mares y brasas EIRL</strong> - Todos los derechos reservados | Diseñado por Novus Solution Corp</span>
    </div>
</footer>

<style>
    footer {
        background-color: #111212;
    }

    #footer-info {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 50px 120px 50px 120px;
        gap: 60px;

        & > img {
            width: 220px;
        }

        & > div {
            display: flex;
            flex-direction: column;
            max-width: 315px;
            gap: 10px;
        }
    }

    #footer-info-titulo {
        color: #fff;
        font-family: "Poppins", sans-serif;
        font-size: 22px;
        font-weight: 600;
    }

    #footer-info-texto {
        color: #C4C4C4;
        font-family: "Poppins", sans-serif;
        font-size: 14px;
    }

    #footer-info-redes {
        display: flex;
        gap: 15px;

        & img {
            width: 45px;
        }
    }

    #copyright {
        padding: 18px 120px 22px 120px;
        text-align: center;
        border-top: 1px solid #8A8A8A;

        & span {
            color: #8A8A8A;
            font-family: "Poppins", sans-serif;
            font-size: 12px;
        }
    }

    @media (max-width: 600px) {
        #footer-info {
            flex-direction: column;
            align-items: center;
            padding: 50px 30px 50px 30px;
            gap: 50px;

            & > img {
                width: 200px;
            }

            & > div {
                align-items: center;
            }
        }

        #footer-info-titulo {
            text-align: center;
            font-size: 20px;
        }

        #footer-info-texto {
            text-align: center;
        }

        #footer-info-redes {

            & img {
                width: 40px;
            }
        }

        #copyright {
            padding: 18px 30px 22px 30px;
        }
    }
</style>