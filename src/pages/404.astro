---
import Layout from '../layouts/Layout.astro';
import logoMyB from '../assets/logoMyB.svg';
---

<Layout>
    <header>
        <nav>
            <img src={logoMyB.src} alt="logo">
            <div>
                <a href="/">INICIO</a>
                <a href="/">MENU</a>
                <a href="/">NOSOTROS</a>
                <a href="/">UBICANOS</a>
            </div>
        </nav>
    </header>
    <main>
        <span>404</span>
        <span>Parece que algo falta</span>
        <span>Esta pagina no existe</span>
        <span>o tal vez fue removida</span>
        <a href="/">IR AL INICIO</a>
    </main>
</Layout>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        background-color: #252525;
        padding: 0 120px 0 120px;
        height: 70px;

        & img {
            width: 125px;
        }
        
        & div {
            display: flex;
            align-items: center;
            gap: 35px;

            & a {
                position: relative;
                color: #fff;
                text-decoration: none;
                font-size: 14px;
                font-weight: 500;
                letter-spacing: 1px;
            }

            & a::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: -6px;
                width: 100%;
                height: 3px;
                background-color: white;
                transform: scaleX(0);
                transition: transform 0.3s ease-in-out;
            }

            & a:hover::after {
                transform: scaleX(1);
            }
        }
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: calc(100vh - 75px);
        min-height: 450px;
        padding: 65px 120px 65px 120px;
        box-sizing: border-box;

        & span {
            font-family: "Poppins", sans-serif;

            &:nth-child(1) {
                font-size: 100px;
                font-weight: bold;
                line-height: 110px;
            }

            &:nth-child(2) {
                font-size: 40px;
                font-weight: 600;
                color: #4d4d4d;
            }

            &:nth-child(3) {
                font-size: 30px;
                color: #979797;
            }

            &:nth-child(4) {
                font-size: 16px;
                color: #979797;
            }
        }

        & a {
            margin-top: 25px;
            padding: 12px 25px;
            border: 3px solid #CD310C;
            background: #CD310C;
            color: #fff;
            font-size: 14px;
            font-weight: 500;
            font-family: "Roboto", sans-serif;
            text-decoration: none;
            letter-spacing: 1px;
            cursor: pointer;
            transition-duration: 0.2s;

            &:hover {
                background: #96260a;
                border: 3px solid #96260a;
            }
        }
    }
</style>